<!-- Add Product Modal -->
<div id="addProductModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal('addProductModal')">&times;</span>
        <h2>Add New Product</h2>
        <form id="addProductForm"> 
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-row">
                <div class="form-group">
                    <label for="productBrand">Brand</label>
                    <input type="text" id="productBrand" name="productBrand" placeholder="Enter brand" required>
                </div>
                <div class="form-group">
                    <label for="productName">Name</label>
                    <input type="text" id="productName" name="productName" placeholder="Enter name" required>
                </div>
                <div class="form-group">
                    <label for="productPrice">Price</label>
                    <input type="number" step="0.01" id="productPrice" name="productPrice" placeholder="Enter price" required>
                </div>
                <div class="form-group">
                    <label for="productCategory">Category</label>
                    <input type="text" id="productCategory" name="productCategory" placeholder="Enter category" required>
                </div>
                <div class="form-group">
                    <label for="productStockCode">Stock Code</label>
                    <input type="text" id="productStockCode" name="productStockCode" placeholder="Enter stock code" required>
                </div>
                <div class="form-group">
                    <label for="productBarcode">Barcode</label>
                    <input type="text" id="productBarcode" name="productBarcode" placeholder="Enter barcode" required>
                </div>
                <div class="form-group">
                    <label for="productWeight">Weight</label>
                    <input type="text" id="productWeight" name="productWeight" placeholder="Enter weight">
                </div>
                <div class="form-group">
                    <label for="productSize">Size</label>
                    <input type="text" id="productSize" name="productSize" placeholder="Enter size">
                </div>
                <div class="form-group">
                    <label for="productImagePath">Image Path</label>
                    <input type="text" id="productImagePath" name="productImagePath" placeholder="Enter image path">
                </div>
                <div class="form-group">
                    <label for="productDiscount">Discount</label>
                    <input type="number" step="0.01" id="productDiscount" name="productDiscount" placeholder="Enter discount">
                </div>
                <div class="form-group">
                    <label for="productInstallmentPrice">Installment Price</label>
                    <input type="number" step="0.01" id="productInstallmentPrice" name="productInstallmentPrice" placeholder="Enter installment price">
                </div>
                <div class="form-group">
                    <label for="isFreeShipping">Free Shipping</label>
                    <input type="checkbox" id="isFreeShipping" name="isFreeShipping">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>
</div>
